#! /usr/bin/env bash

LISTFILES=$(find -type f -print0 )
# Liste fichiers compressÃ©s
EXCLFILES=$(find -regextype posix-extended  -regex '.*\.(gz|zip)')

function argu () {
	if [[ ! $1 ]]; then
		echo "No arguments"
		echo Usage
		exit 0
	fi

	if [[ $# > "1" ]];then
		echo "Too much arguments"
		echo Usage
		exit 0
	fi

	if [[ ! -e $1 ]]  && [[ ! -d $1 ]]; then
		echo "Directory Don't exist"
		echo Usage
		exit 0
	fi
}

function untargz () {

	#find -type f -print0 | xargs -0 -I {} tar -cvzf {}.tar.gz {} && wait 
	find . -type f -print0 | while read -d $'\0' file; do
		if [[ ${file##*.}  == *(gz|tar)  ]]; then		
		#if [[ ${file##*.}  == *(xz|gz|7z|bz2|zip|tar)  ]]; then
		 	CURDIR=$(echo $(pwd))
		 	#cd $CURDIR
		 	echo "               ----------------------------------------------------------------"
		 	echo ""
		 	file -0 "${file}" 
		 	wait
		 	tar -xf "${file}"
		 	echo "                ----------------------------------------------------------------"
		 	echo ""
		fi	
		done
}

