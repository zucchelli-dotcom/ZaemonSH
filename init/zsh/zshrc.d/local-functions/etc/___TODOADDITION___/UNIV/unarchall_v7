if [[ ! $1 ]]; then
	echo "No arguments"
	echo Usage
	exit 0
fi

if [[ $# > "1" ]];then
	echo "Too much arguments"
	echo Usage
	exit 0
fi

if [[ ! -e $1 ]]  &&  [[ ! -d $1 ]]; then
	echo "Directory Don't exist"
	echo Usage
	exit 0
fi
wait



if [[ $(ls "${@}") != "" ]]; then
	cd "${@}"
	untargz
	wait
	exit 0
else 
	echo "Internal Error"
	wait
	exit 0
fi