# check if vm is running or returns a list of running vms
vbox-running() {
    local vm=$1

    typeset -A prefs
    zeesh-prefs virtualbox get
    local vboxmanage=$prefs[vboxmanage]

    running=$($vboxmanage list runningvms | grep -o '^".*"' | cut -d '"' -f2)
    if [ -n "$vm" ]; then
        if [ -n "$running[(fr)$vm]" ]; then
            return 0
        else
            return 1
        fi
    else
        echo $running
    fi
}

# vim: ft=zsh
