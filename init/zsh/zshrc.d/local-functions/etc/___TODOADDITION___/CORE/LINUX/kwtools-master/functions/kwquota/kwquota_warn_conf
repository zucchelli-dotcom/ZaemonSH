# Funktion (kwquota_warn_conf), konfiguriert Quota Warnung# {{{
#
# usage: kwquota_warn_conf
kwquota_warn_conf() {
	# QUOTA_WARN_CF einlesen
	read_file -s '[[:space:]]*=[[:space:]]*' "$QUOTA_WARN_CF"
	# Funktion (warn_menu)# {{{
	lv_All=$(gettext 'alle')
	lv_Mail_Cmd=$(gettext 'Mail_Befehl')
	lv_Subject=$(gettext 'Betreff')
	lv_Message=$(gettext 'Nachricht')
	lv_Group_Message=$(gettext 'Gruppen_Nachricht')
	lv_Copy=$(gettext 'Kopie')
	lv_Admin_Timeslot=$(gettext 'Admin_Zeitfenster')
	lv_From=$(gettext 'Sender')
	lv_Support=$(gettext 'Support')
	lv_Sign=$(gettext 'Signatur')
	lv_Group_Sign=$(gettext 'Gruppen_Signatur')
	lv_Phone=$(gettext 'Telefon')
	lv_Charset=$(gettext 'Zeichensatz')
	lv_Mail_Dev=$(gettext 'Mail_Laufwerk')
	warn_menu() {
		WARN_MENU_TITLE="$lv_Warn"
		WARN_MENU=($lv_Mail_Cmd \"$MAIL_CMD\" $lv_Subject \"$SUBJECT\"
			$lv_Message \"$MESSAGE\" $lv_Group_Message \"$GROUP_MESSAGE\"
			$lv_Copy \"$CC_TO\" $lv_Admin_Timeslot \"$CC_BEFORE\"
			$lv_From \"$FROM\" $lv_Support \"$SUPPORT\" $lv_Sign \"$SIGNATURE\"
			$lv_Group_Sign \"$GROUP_SIGNATURE\" $lv_Phone \"$PHONE\"
			$lv_Charset \"$CHARSET\" $lv_Mail_Dev \"$MAILDEV\" $gv_Save \"\" $gv_Back \"\")
			menubox "$1" "$WARN_MENU_TITLE" "$gv_Menupoint" "$WARN_MENU"
	}
	## }}}
	ADMIN_MAIL_ADR="root@`hostname -d`"
	warn_menu
	while [ -n "$gv_Auswahl" ] ; do
		case "$gv_Auswahl" in
			HELP*)	script_help warn_conf_help
				warn_menu "${gv_Auswahl#HELP }"
				;;
			$lv_Mail_Cmd)
				# Mail Befehl eingeben (/usr/sbin/sendmail -t)# {{{
				MAIL_CMD_MSG=$(gettext 'Geben Sie das Kommando zum versenden der mails ein (Bsp. /usr/sbin/sendmail -t).')
				inputbox "$WARN_MENU_TITLE" "$MAIL_CMD_MSG" "${MAIL_CMD:-/usr/sbin/sendmail -t}"
				if [ -n "$gv_Auswahl" ] ; then
					MAIL_CMD="$gv_Auswahl"
				else
					MAIL_CMD="/usr/sbin/sendmail -t"
				fi	
				## }}}
				warn_menu $lv_Mail_Cmd
				;;
			$lv_Subject)
				# Betreff eingeben# {{{
				SUBJ_MSG=$(gettext 'Diese Betreff-Angabe wird als Betreff jeder E-Mail benutzt, die das Warnquota-Hilfswerkzeug verschickt.\nBetreff-Angabe fuer Warnquota-E-Mails:')
				inputbox "$WARN_MENU_TITLE" "$SUBJ_MSG" "$SUBJECT"
				if [ -n "$gv_Auswahl" ] ; then
					SUBJECT="$gv_Auswahl"
				else
					SUBJECT="Over quota"
				fi	
				## }}}
				warn_menu $lv_Subject
				;;
			$lv_Message)
				# Eingabe der User Nachricht# {{{
				MESSAGE_MSG=$(gettext 'Dieser Text wird als Nachricht in jeder E-Mail verwendet, die von Warnquota-Programm verschickt wird. Einen Zeilenumbruch erhalten Sie mit dem Zeichen \"|\". Falls Sie den Text leer lassen, wird die Standard-Nachricht verwendet.\nText der Warnquota-E-Mails:')
				inputbox "$WARN_MENU_TITLE" "$MESSAGE_MSG" "$MESSAGE"
				if [ -n "$gv_Auswahl" ] ; then
					MESSAGE="$gv_Auswahl"
				else
					unset -- MESSAGE
				fi
				## }}}
				warn_menu $lv_Message
				;;
			$lv_Group_Message)
				# Eingabe der Gruppen Nachricht# {{{
				GROUP_MESSAGE_MSG=$(gettext 'Dieser Text wird als Nachricht in jeder E-Mail verwendet, die von Warnquota-Programm verschickt wird, wenn Benutzergruppen Ueber Quota sind. Einen Zeilenumbruch erhalten Sie mit dem Zeichen \"|\". Falls Sie den Text leer lassen, wird die Standard-Nachricht verwendet.\nText der Warnquota-Gruppen-E-Mails:')
				inputbox "$WARN_MENU_TITLE" "$GROUP_MESSAGE_MSG" "$GROUP_MESSAGE"
				if [ -n "$gv_Auswahl" ] ; then
					GROUP_MESSAGE="$gv_Auswahl"
				else
					unset -- GROUP_MESSAGE
				fi
				## }}}
				warn_menu $lv_Group_Message
				;;
			$lv_Copy)
				# Wer soll ein Kopie erhalten# {{{
				CC_TO_MSG=$(gettext 'Den Text den Sie hier angeben, wird im CC-Feld jeder E-Mail verwendet, die das Warnquota-Hilfswerkzeug versendet.\nKopie-Adresse fuer Warnquota-E-Mails:')
				mail_address "$CC_TO_MSG" "${CC_TO:-$ADMIN_MAIL_ADR}"
				if [ -n "$gv_Mail_Adr" ] ; then
					CC_TO="$gv_Mail_Adr"
				else
					unset -- CC_TO
				fi
				## }}}
				warn_menu $lv_Copy
				;;
			$lv_Admin_Timeslot)
				# CC admin this time before the end of grace period (2 days - 2 Tage)# {{{
				CC_BEFORE_MSG=$(gettext 'In der angegebenen Zeit vor Ende der Gnadenfrist wird jede E-Mail auch an den Administrator geschickt. Eine leere Eingabe bedeutet die ganze Gnadenfrist.\n\nZeitscheibe, in der der Administrator E-Mail bekommt (Bsp. 2 days = 2 Tage):')
				inputbox "$WARN_MENU_TITLE" "$CC_BEFORE_MSG" "$CC_BEFORE"
				if [ -n "$gv_Auswahl" ] ; then
					CC_BEFORE="$gv_Auswahl"
				else
					unset -- CC_BEFORE
				fi
				## }}}
				warn_menu $lv_Admin_Timeslot
				;;
			$lv_Sender)
				# Wer sendet die mail# {{{
				FROM_MSG=$(gettext 'Diese E-Mail-Adresse wird als Absender jeder E-Mail benutzt, die das Warnquota-Programm verschickt.\nAbsender-Adresse fuer Warnquota-E-Mails:')
				mail_address "$FROM_MSG" "${FROM:-$ADMIN_MAIL_ADR}"
				if [ -n "$gv_Mail_Adr" ] ; then
					FROM="$gv_Mail_Adr"
				else
					FROM="$ADMIN_MAIL_ADR"
				fi
				## }}}
				warn_menu $lv_Sender
				;;
			$lv_Sign)
				# Signatur eingeben# {{{
				SIGN_MSG=$(gettext 'Dieser Text wird als Signatur fuer jede E-Mail verwendet, die vom Warnquota-Programm verschickt wird. Einen Zeilenumbruch erhalten Sie mit dem Zeichen \"|\". Falls Sie den Text leer lassen, wird die Standard-Signatur verwendet.\nSignatur der Warnquota E-Mails:')
				inputbox "$WARN_MENU_TITLE" "$SIGN_MSG" "${SIGNATURE:-$ADMIN_MAIL_ADR}"
				if [ -n "$gv_Auswahl" ] ; then
					SIGNATURE="$gv_Auswahl"
				else
					unset -- SIGNATURE
				fi
				## }}}
				warn_menu $lv_Sign
				;;
			$lv_Group_Sign)
				# Gruppen Signatur eingeben # {{{
				GROUP_SIGN_MSG=$(gettext 'Dieser Text wird als Signatur fuer jede E-Mail verwendet, die vom Warnquota-Programm verschickt wird, wenn Benutzergruppen Ueber Quota sind. Einen Zeilenumbruch erhalten Sie mit dem Zeichen \"|\". Falls Sie den Text leer lassen, wird die Standard-Nachricht verwendet.\nSignatur der Warnquota-Gruppen-E-Mails:')
				inputbox "$WARN_MENU_TITLE" "$GROUP_SIGN_MSG" "${GROUP_SIGNATURE:-$ADMIN_MAIL_ADR}"
				if [ -n "$gv_Auswahl" ] ; then
					GROUP_SIGNATURE="$gv_Auswahl"
				else
					unset -- GROUP_SIGNATURE
				fi
				## }}}
				warn_menu $lv_Group_Sign
				;;
			$lv_Support)
				# Support Adresse eingeben (mail)# {{{
				SUPPORT_MSG=$(gettext 'Bitte geben Sie eine E-Mail-Adresse ein, die ein Benutzer anschreiben kann, falls er Hilfe zu Ueber Quota-E-Mail benoetigt. Wenn Sie eine Signatur angeben, koennen Sie dieses Feld leer lassen.\nE-Mail-Adresse des Administrators:')
				mail_address "$SUPPORT_MSG" "${SUPPORT:-$ADMIN_MAIL_ADR}"
				if [ -n "$gv_Mail_Adr" ] ; then
					SUPPORT="$gv_Mail_Adr"
				else
					unset -- SUPPORT
				fi
				## }}}
				warn_menu $lv_Support
				;;
			$lv_Phone)
				# Telefon Nummer eingeben# {{{
				TEL_MSG=$(gettext 'Bitte geben Sie eine Telefonnummer ein, die ein Benutzer anrufen kann, falls er Hilfe zu seiner Ueber Quota-E-Mail benoetigt (Bsp. (123) 456-1111). Wenn Sie eine Signatur angeben, koennen Sie die Sie diesen Text leer lassen.\nTelefonnummer des Administrators:')
				inputbox "$WARN_MENU_TITLE" "$TEL_MSG" "$PHONE"
				if [ -n "$gv_Auswahl" ] ; then
					PHONE="$gv_Auswahl"
				else
					unset -- PHONE
				fi
				## }}}
				warn_menu $lv_Phone
				;;
			$lv_Charset)
				# Zeichensatz eingeben# {{{
				CHARSET_MSG=$(gettext 'Den Text den Sie hier angeben, wird im charset-Feld im MIME-Kopfbereich jeder E-Mail verwendet, die das Warnquota-Hilfswerkzeug versendet.\n\nZeichensatz, in der die E-Mail geschickt wird:')
				inputbox "$WARN_MENU_TITLE" "$CHARSET_MSG" "${CHARSET:-ISO-8859-1}"
				if [ -n "$gv_Auswahl" ] ; then
					CHARSET="$gv_Auswahl"
				else
					CHARSET=ISO-8859-1
				fi
				## }}}
				warn_menu $lv_Charset
				;;
			$lv_Mail_Dev)
				# Mail Drive fuer keine mail Zustellung auswaehlen# {{{
				read_fstab_quota
				if [ -n "$Mountpoint_M" ] ; then
					MAILDEV_MSG=$(gettext 'Waehlen sie ein Laufwerk aus.')
					MAILDEV_MENU=($lv_All \"\" off $gv_None \"\" off $Mountpoint_M)
					checklist "" "$WARN_MENU_TITLE" "$MAILDEV_MSG" "$MAILDEV_MENU"
					while [ -n "$gv_Auswahl" ] ; do
						case "$gv_Auswahl" in
							HELP*)	script_help warn_conf_help
								checklist "${gv_Auswahl#HELP }" "$WARN_MENU_TITLE" "$MAILDEV_MSG" "$MAILDEV_MENU"
								;;
							*)
								# Werte uebernehmen
								if [ ${(M)${gv_Auswahl}##${lv_All}} ] ; then
									MAILDEV="any"
								elif [ ${(M)${gv_Auswahl}##${gv_None}} ] ; then
									MAILDEV=""
								else
									MAILDEV="$gv_Auswahl"
								fi
								break
								;;
						esac
					done
				else
					no_quota_msg
				fi
				## }}}
				warn_menu $lv_Mail_Dev
				;;
			$gv_Save)
				# Konfiguration speichern
				kwquota_warn_config
				break
				;;
			$gv_Back)	break
				;;
		esac
	done
}
## }}}
