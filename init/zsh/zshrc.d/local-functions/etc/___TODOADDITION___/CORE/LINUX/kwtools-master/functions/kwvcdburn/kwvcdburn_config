# Funktion kwvcdburn_config{{{
kwvcdburn_config() {
#
# Konfiguration von kwvcdburnrc schreiben.
#
> ${gv_HomePath}/.kwtools/kwvcdburnrc <<< "# Beginn ~/.kwtools/kwvcdburnrc
#
# Autor: Kai Wilke <kiste@netzworkk.de>

# Geben sie hier das Grund Verzeichnis an, in welchem die
# Filme gespeichert werden.
FILM_DIR=\"$FILM_DIR\"

# Welcher VCD Type soll benutzt werden? (svcd,vcd1,vcd2,hqvcd)
VCD_TYPE=\"$VCD_TYPE\"

# Wie heiﬂt das Verzeichnis, welches gemountet werden muss.
MOUNT_PATH=\"$MOUNT_PATH\"

# End ~/.kwtools/kwvcdburnrc"

read_file kwvcdburnrc
}
#}}}
### Modeline {{{
### vim:ft=zsh:foldmethod=marker
### vim:set ts=4:                                                                               
### }}}
