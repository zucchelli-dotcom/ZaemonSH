# Funktion, Nachricht falls keine VG's vorhanden sind{{{
#
# usage: no_vg_msg
no_vg_msg() {
	MSG=$(gettext 'Es sind keine Volume Groups vorhanden. Sie muessen erst Volume Groups erzeugen und dann darauf, logische Volumes.')
	msgbox "$gv_Attention" "$MSG"
}
#}}}
