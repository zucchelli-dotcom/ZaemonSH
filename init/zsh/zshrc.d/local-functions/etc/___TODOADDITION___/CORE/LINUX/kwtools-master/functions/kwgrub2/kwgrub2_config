# Funktion kwgrub2 default Konfiguration schreiben{{{
#
# usage: kwgrub2_config
#
kwgrub2_config() {
	# default Konfiguration schreiben.
	#
	> $GRUB_DEFAULT_CONFFILE <<< "# Begin $GRUB_DEFAULT_CONFFILE
#
# see also info grub
#
# Autor: Kai Wilke <kiste@netzworkk.de>
#
# If you change this file, run 'update-grub' afterwards to update
# /boot/grub/grub.cfg.
# For full documentation of the options in this file, see:
#   info -f grub -n 'Simple configuration'

GRUB_DEFAULT=\"$GRUB_DEFAULT\"
GRUB_SAVEDEFAULT=\"$GRUB_SAVEDEFAULT\"
GRUB_TIMEOUT=\"$GRUB_TIMEOUT\"
GRUB_HIDDEN_TIMEOUT=\"$GRUB_HIDDEN_TIMEOUT\"
GRUB_HIDDEN_TIMEOUT_QUIET=\"$GRUB_HIDDEN_TIMEOUT_QUIET\"
GRUB_DEFAULT_BUTTON=\"$GRUB_DEFAULT_BUTTON\"
GRUB_TIMEOUT_BUTTON=\"$GRUB_TIMEOUT_BUTTON\"
GRUB_HIDDEN_TIMEOUT_BUTTON=\"$GRUB_HIDDEN_TIMEOUT_BUTTON\"
GRUB_BUTTON_CMOS_ADDRESS=\"$GRUB_BUTTON_CMOS_ADDRESS\"
GRUB_DISTRIBUTOR=\"$GRUB_DISTRIBUTOR\"
GRUB_TERMINAL_INPUT=\"$GRUB_TERMINAL_INPUT\"
GRUB_TERMINAL_OUTPUT=\"$GRUB_TERMINAL_OUTPUT\"
GRUB_TERMINAL=\"$GRUB_TERMINAL\"
GRUB_SERIAL_COMMAND=\"$GRUB_SERIAL_COMMAND\"
GRUB_CMDLINE_LINUX=\"$GRUB_CMDLINE_LINUX\"
GRUB_CMDLINE_LINUX_DEFAULT=\"$GRUB_CMDLINE_LINUX_DEFAULT\"
GRUB_CMDLINE_NETBSD=\"$GRUB_CMDLINE_NETBSD\"
GRUB_CMDLINE_NETBSD_DEFAULT=\"$GRUB_CMDLINE_NETBSD_DEFAULT\"
GRUB_CMDLINE_GNUMACH=\"$GRUB_CMDLINE_GNUMACH\"
GRUB_CMDLINE_XEN=\"$GRUB_CMDLINE_XEN\"
GRUB_CMDLINE_XEN_DEFAULT=\"$GRUB_CMDLINE_XEN_DEFAULT\"
GRUB_CMDLINE_LINUX_XEN_REPLACE=\"$GRUB_CMDLINE_LINUX_XEN_REPLACE\"
GRUB_CMDLINE_LINUX_XEN_REPLACE_DEFAULT=\"$GRUB_CMDLINE_LINUX_XEN_REPLACE_DEFAULT\"
GRUB_DISABLE_LINUX_UUID=\"$GRUB_DISABLE_LINUX_UUID\"
GRUB_DISABLE_LINUX_RECOVERY=\"$GRUB_DISABLE_LINUX_RECOVERY\"
GRUB_VIDEO_BACKEND=\"$GRUB_VIDEO_BACKEND\"

# The resolution used on graphical terminal
# note that you can use only modes which your graphic card supports via VBE
# you can see them in real GRUB with the command vbeinfo.
GRUB_GFXMODE=\"$GRUB_GFXMODE\"

GRUB_BACKGROUND=\"$GRUB_BACKGROUND\"
GRUB_THEME=\"$GRUB_THEME\"
GRUB_GFXPAYLOAD_LINUX=\"$GRUB_GFXPAYLOAD_LINUX\"
GRUB_DISABLE_OS_PROPPER=\"$GRUB_DISABLE_OS_PROPPER\"
GRUB_INIT_TUNE=\"$GRUB_INIT_TUNE\"
GRUB_PRELOAD_MODULES=\"$GRUB_PRELOAD_MODULES\"
GRUB_BADRAM=\"$GRUB_BADRAM\"

# Password protection
GRUB_PASSWD_USER=\"$GRUB_PASSWD_USER\"
GRUB_PASSWD=\"$GRUB_PASSWD\"
GRUB_PASSWD_PBKDF2=\"${GRUB_PASSWD_PBKDF2%[[:cntrl:]]}\"

# End $GRUB_DEFAULT_CONFFILE"

	read_file -f "$GRUB_DEFAULT_CONFFILE"
}
#}}}
### Modeline {{{
### vim:ft=zsh:foldmethod=marker
### vim:set ts=4:                                                                               
### }}}
