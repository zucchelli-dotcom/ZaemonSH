#----------------------------------------------------------------------------------------#
#                                     DESCRIPTION
#----------------------------------------------------------------------------------------#
#  _wifi :
#  wifi completion to handle wifi settings and give wifi informations.

#----------------------------------------------------------------------------------------#
#                                        TODO
#----------------------------------------------------------------------------------------#

#----------------------------------------------------------------------------------------#
#                                       CHANGES
#----------------------------------------------------------------------------------------#
# 04/01/2018 :
#  â€¢ Modify completion presentation.

#----------------------------------------------------------------------------------------#
#                                       CONFIG
#----------------------------------------------------------------------------------------#
local _wifi

#----------------------------------------------------------------------------------------#
#                                      FUNCTIONS
#----------------------------------------------------------------------------------------#
_wifi(){
  local -a _1st_arguments
  _1st_arguments=(
    'status:Wifi status.'
    'scan:Scan wifi'
    'showpassword:Show wifi network password (default: current)'
    'history:wifi connection history'
    'off:Put full path in finder title bar'
    'on:Print Files Selected in Finder'
    'connect:Quit finder'
    'help:view this help'
  )

  local curcontext="$curcontext" state line expl
  local -A opt_args

  _arguments -C '*:: :->subcmds'

  if (( CURRENT == 1 )); then
    _describe -t commands "wifi subcommands" _1st_arguments
    return
  fi

  case "$words[1]" in
      status)
       _arguments \
       "1: :(YES NO)" \
        && return 0
       ;;
      scan)
       _arguments \
       "1: :(YES NO)" \
       && return 0
       ;;
      showpassword)
       _arguments \
       "1: :(YES NO)" \
       && return 0
       ;;
      history)
       _arguments \
       "1: :(column list icon)" \
       && return 0
       ;;
      off)
       _arguments \
       && return 0
       ;;
      on)
       _arguments \
       && return 0
       ;;            
      connect)
       _arguments && return 0
       ;;
      help)
       _arguments && return 0
       ;;           
       *)
       _message "unknown wifi command: $words[1]"
         _default
        ;;
  esac
  return 1
}

#----------------------------------------------------------------------------------------#
#                                      COMPLETION
#----------------------------------------------------------------------------------------#
_wifi "$@"
