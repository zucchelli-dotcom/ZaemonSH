#----------------------------------------------------------------------------------------#
#                                     DESCRIPTION
#----------------------------------------------------------------------------------------#
#  _volume :
#  Completion for volume; set volume from CLI.

#----------------------------------------------------------------------------------------#
#                                        TODO
#----------------------------------------------------------------------------------------#

#----------------------------------------------------------------------------------------#
#                                       CHANGES
#----------------------------------------------------------------------------------------#
# 04/01/2018 :
#  â€¢ Modify completion presentation.

#----------------------------------------------------------------------------------------#
#                                       CONFIG
#----------------------------------------------------------------------------------------#
local _zolume

#----------------------------------------------------------------------------------------#
#                                      FUNCTIONS
#----------------------------------------------------------------------------------------#
_zolume(){
  local -a _1st_arguments
  _1st_arguments=(
    'volume:get the volume level'
    'set:set the volume to n %'
    'increase:increase the volume by [0-100]'
    'decrease:decrease the volume by [0-100]'
    'up:increase the volume by 6.25'
    'down:decrease the volume by 6.25'
    'mute:set mute'
    'unmute:unset mute'
    'ismute:check the volume status'
    'help:view this help'
  )

  #
  local curcontext="$curcontext" state line expl
  local -A opt_args

  _arguments -C '*:: :->subcmds'

  if (( CURRENT == 1 )); then
    _describe -t commands "volume subcommands" _1st_arguments
    return
  fi

  case "$words[1]" in
      volume)
       _arguments \
       && return 0
       ;;
      set)
       _arguments \
       && return 0
       ;;
      increase)
       _arguments \
       && return 0
       ;;
      decrease)
       _arguments \
       && return 0
       ;;
      down)
       _arguments && return 0
       ;;
      mute)
       _arguments && return 0
       ;;
      unmute)
       _arguments && return 0
       ;;
      ismute)
       _arguments && return 0
       ;;
      *)
       _message "unknown volume command: $words[1]"
         _default
        ;;
  esac
  return 1
}

#----------------------------------------------------------------------------------------#
#                                      COMPLETION
#----------------------------------------------------------------------------------------#
_zolume "$@"

