#----------------------------------------------------------------------------------------#
#                                     DESCRIPTION
#----------------------------------------------------------------------------------------#
# _timezone_handle :
# Completion for timezone. Get, set and list available timezone(s).

#----------------------------------------------------------------------------------------#
#                                        TODO
#----------------------------------------------------------------------------------------

#----------------------------------------------------------------------------------------#
#                                       CHANGES
#----------------------------------------------------------------------------------------#
# 09/02/2020 :
#  â€¢ Create this one

#----------------------------------------------------------------------------------------#
#                                       CONFIG
#----------------------------------------------------------------------------------------#
local _timezon
#----------------------------------------------------------------------------------------#
#                                      FUNCTIONS
#----------------------------------------------------------------------------------------#
_timezon(){
local -a _1st_arguments
_1st_arguments=(
      'list:list available timezones'
      'ls:list available timezones'
      'set:Set timezone'
      'help:view this help'
 )

_timezonelist(){compadd -X %B"--- available timezones ---"%b $(sudo systemsetup -listtimezones) && return 0 } 

local curcontext="$curcontext" state line expl
local -A opt_args

_arguments -C '*:: :->subcmds'

if (( CURRENT == 1 )); then
  _describe -t commands "timezone_handle subcommands" _1st_arguments
  return
fi

case "$words[1]" in
    list)
     _arguments \
     && return 0
     ;;
    ls)
     _arguments \
     && return 0
     ;;
    set)
     _arguments \
     "1: : _timezonelist" && return 0
     ;;            
    help)
     _arguments && return 0
     ;;          
     *)
     _message "unknown timezone_handle command: $words[1]"
       _default
      ;;
esac
return 1
}

#----------------------------------------------------------------------------------------#
#                                      COMPLETION
#----------------------------------------------------------------------------------------#
_timezon "$@"




