#----------------------------------------------------------------------------------------#
#                                     DESCRIPTION
#----------------------------------------------------------------------------------------#
# _vpn :
# Completion for vpn. Play VPN on CLI.

#----------------------------------------------------------------------------------------#
#                                        TODO
#----------------------------------------------------------------------------------------#

#----------------------------------------------------------------------------------------#
#                                       CHANGES
#----------------------------------------------------------------------------------------#
# 04/01/2018 :
#  â€¢ Modify completion presentation.

#----------------------------------------------------------------------------------------#
#                                       CONFIG
#----------------------------------------------------------------------------------------#

#----------------------------------------------------------------------------------------#
#                                      FUNCTIONS
#----------------------------------------------------------------------------------------#
_vpn(){
  local -a _1st_arguments
  _1st_arguments=(
    'ls:list VPN connections'
    'list:list VPN connections'
    'start:start vpn connection'
    'stop:stop vpn connection'
    'status:status vpn connection named VPN'
    'help:view this help'
  )

  #
  local curcontext="$curcontext" state line expl

  _arguments -C '*:: :->subcmds'

  if (( CURRENT == 1 )); then
    _describe -t commands "vpn subcommands" _1st_arguments
    return
  fi

  case "$words[1]" in
      ls)
       _arguments && return 0
       ;;
      list)
       _arguments && return 0
       ;;
      start)
       _arguments && return 0
       ;;
      stop)
       _arguments && return 0
       ;;
      status)
       _arguments && return 0
       ;;
      *)
       _message "unknown vpn command: $words[1]"
         _default
        ;;
  esac
  return 1
}

#----------------------------------------------------------------------------------------#
#                                      COMPLETION
#----------------------------------------------------------------------------------------#
_vpn "$@"
