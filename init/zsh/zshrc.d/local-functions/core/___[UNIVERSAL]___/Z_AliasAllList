#----------------------------------------------------------------------------------------#
#                                       CONFIG
#----------------------------------------------------------------------------------------#
local VERSION FCT_NAME

VERSION="v0.0.2"
FCT_NAME="Z_AliasAllList"

#----------------------------------------------------------------------------------------#
#                                      FUNCTIONS
#----------------------------------------------------------------------------------------#
banner () {
     clear
     echo " ##############################################################################"
     echo " #                                                                            #"
     echo " #  ${GREEN}This is ${RED}$FCT_NAME: ${YEL}$VERSION on ${GREEN}$OSTYPE${NC}${YEL} system.${NC}"
     echo " #  CopyL®®v 2020, Zucchelli Bryan                                            #"
     echo " #                                                                            #"
     echo " #  Unless required by applicable law or agreed to in writing, software       #"
     echo " #  distributed under the License is distributed on an AS IS BASIS,           #"
     echo " #  WITHOUT WARRANTIES OR CONDITIONS OF ANY KIND, either express or implied.  #"
     echo " #  See the License for the specific language governing permissions and       #"
     echo " #  limitations under the License.                                            #"
     echo " #                                                                            #"
     echo " ##############################################################################"
     echo ""
}

help(){
  cat<<__EOF__
  ${RED}
    usage:  [  ]

    Examples:
                                                 # .

  ${NC}
__EOF__
}

#-------------------------------------------------------------------------------------------#
#                                              SCRIPT
#-------------------------------------------------------------------------------------------#
banner
###############################################
###              MAIN ALIAS
###############################################
#ALIASMAINRES=$(grep -r "alias" $P_MAINALIASFILE | sed 's/.*alias//' | grep -E "=")
echo "-----------------------------------------"
echo  ${CYAN}ALIAS MAIN${NC}
echo "-----------------------------------------${CYAN}"
#echo ${ALIASMAINRES}
grep -r "alias" $P_MAINALIASFILE 2>/dev/null | sed 's/.*alias//' | grep -E "="
echo "${NC}"

###############################################
###           UNIVERSAL ALIAS
###############################################
#ALIASADDIRES=$(grep -r "alias" $P_ADDIALIASFILE| grep -E "=" | sed 's/.*://' | grep -E '^alias' | grep -E '=' | grep -E 'alias' | grep -E '^alias' | sed 's/.*alias//')
#ALIASADDIRES=$(grep -r "alias" $P_ADDIALIASFILE | sed 's/alias//' | grep "=" | sed 's/.*://' | grep "alias"  | sed 's/^[ \t]*//;s/[ \t]*$//')
echo "-----------------------------------------"
echo  ${YEL}ALIAS UNIVERSAL${NC}
echo "-----------------------------------------${YEL}"
#echo ${ALIASADDIRES}
grep -r "alias" $P_UNIALIASFILE 2>/dev/null | sed 's/alias//' | grep "=" | sed 's/.*://' | grep "alias"  | sed 's/^[ \t]*//;s/[ \t]*$//' | grep -E '^alias '  | sed 's/.*alias//' | grep '='
echo "${NC}"

###############################################
###             DARWIN ALIAS
###############################################
echo "-----------------------------------------"
echo  ${GREY}ALIAS DARWIN${NC}
echo "-----------------------------------------${GREY}"
grep -r "alias" $P_DARWALIASFILE 2>/dev/null | sed 's/alias//' | grep "=" | sed 's/.*://' | grep "alias"  | sed 's/^[ \t]*//;s/[ \t]*$//' | grep -E '^alias '  | sed 's/.*alias//' | grep '='
echo "${NC}"

###############################################
###              LINUX ALIAS
###############################################
echo "-----------------------------------------"
echo  ${RED}ALIAS LINUX${NC}
echo "-----------------------------------------${RED}"
#echo ${ALIASADDIRES}
grep -r "alias" $P_LINUXALIASFILE 2>/dev/null | sed 's/alias//' | grep "=" | sed 's/.*://' | grep "alias"  | sed 's/^[ \t]*//;s/[ \t]*$//' | grep -E '^alias '  | sed 's/.*alias//' | grep '='
echo "${NC}"

###############################################
###               GRML ALIAS
###############################################
#GRMLRES=$(grep -r "alias" $P_GRMLALIASFILE | grep -E "=" | sed 's/.*://' | grep -E '^alias' | grep -E '=' | grep -E 'alias' | grep -E '^alias')
echo "-----------------------------------------"
echo  ${GREEN}ALIAS GRML${NC} 
echo "-----------------------------------------${GREEN}"
# echo ${GRMLRES}
grep -r "alias" $P_GRMLALIASFILE 2>/dev/null | grep -E "=" | sed 's/.*://' | grep -E '^alias' | grep -E '=' | grep -E 'alias' | grep -E '^alias' | sed 's/.*alias//' | grep '='
echo "${NC}"

###############################################
###             PLUGINEXTRA ALIAS
###############################################
#ALIASPLUGINSRES="$(grep -r "alias" $P_PLUGINSALIASFILE | grep -E "=" | sed 's/.*://' | grep -E '^alias' | grep -E '=' | grep -E 'alias' | grep -E '^alias' | egrep '=')"
#ALIASPLUGINSRES="$(grep -r "alias" $P_PLUGINSALIASFILE | sed 's/.*://' | grep -E '^alias' | grep -E '=' | grep -E 'alias' | grep -E '^alias')"  | sed 's/.*alias//' | grep '='
echo "-----------------------------------------"
echo  ${MAGENTA}ALIAS PLUGINS${NC}
echo "-----------------------------------------${MAGENTA}"
#echo ${ALIASPLUGINSRES}
grep -r "alias" $P_PLUGINSALIASFILE 2>/dev/null | sed 's/.*://' | grep -E '^alias' | grep -E '=' | grep -E 'alias' | grep -E '^alias' | sed 's/.*alias//' | grep '='
echo "${NC}"


